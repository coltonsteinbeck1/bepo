# Bepo Bot - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# Discord Configuration
# ============================================
BOT_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here
GUILD_ID=your_discord_guild_id_here

# Discord Channel IDs (optional)
CHILLIN_CHANNEL=channel_id_for_scheduled_messages

# ============================================
# AI Services
# ============================================
# OpenAI (for DALL-E, GPT-4V, Sora, Web Search)
OPENAI_KEY=your_openai_api_key_here

# xAI/Grok (for primary chat)
XAI_KEY=your_xai_api_key_here

# ============================================
# Database (Supabase)
# ============================================
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here

# ============================================
# Bot Behavior
# ============================================
# Command prefix (e.g., /, !, ?)
PREFIX=/

# Model selection
MODEL_SYSTEM_MESSAGE="You are Bepo, a helpful and friendly Discord bot."

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARN, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable/disable console logging
ENABLE_CONSOLE_LOGS=true

# Enable/disable file logging
ENABLE_FILE_LOGS=true

# ============================================
# Monitoring & Health
# ============================================
# Enable monitoring service
ENABLE_MONITOR=true

# Enable offline response system
ENABLE_OFFLINE_RESPONSE=true

# Health check interval (milliseconds)
HEALTH_CHECK_INTERVAL=60000

# ============================================
# Feature Flags
# ============================================
# Enable web search for current information
ENABLE_WEB_SEARCH=true

# Enable voice features
ENABLE_VOICE=true

# Enable video generation (Sora)
ENABLE_VIDEO_GEN=true

# Enable game notifications
ENABLE_APEX_NOTIFICATIONS=true
ENABLE_CS2_NOTIFICATIONS=true

# ============================================
# Performance Tuning
# ============================================
# Memory cache TTL (milliseconds)
MEMORY_CACHE_TTL=300000

# Thread cache TTL (milliseconds)
THREAD_CACHE_TTL=120000

# Max conversation history length
MAX_CONVERSATION_LENGTH=50

# ============================================
# Development
# ============================================
# Environment (development, production)
NODE_ENV=production

# Debug mode
DEBUG=false

# ============================================
# Optional: External Services
# ============================================
# Steam API (for CS2 prices)
# STEAM_API_KEY=your_steam_api_key_here

# AWS EC2 (for Minecraft server)
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# AWS_REGION=us-east-1

# Webhook URLs (for notifications)
# WEBHOOK_URL=your_webhook_url_here
# ERROR_WEBHOOK_URL=your_error_webhook_url_here
